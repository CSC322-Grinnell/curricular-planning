<% provide(:title, "Course") %>

<h1>Course Info</h1>

<div class="center">
    <%= button_to "Delete Course", 
          { action: "post",
            controller: "dashboard",
            request: "deleteCourse", 
            id: @course.id,
          },
          class: 'btn btn-danger center' %>
    <br/>
</div>

<div class="row">
  <div class="col-md-3">
    <%= form_tag("/course", class: "form-horizontal") do %>
      <%= hidden_field_tag(:request, "editCourse") %>
      <%= hidden_field_tag(:id, @course.id) %>
      <h3>Edit Course</h3>
      
      <div class="form-group">
        <%= label_tag(:course_number, "Course number", class: "control-label") %>
        <%= number_field_tag(:course_number, 151, min: 100, step: 1, class: "form-control", value: @course.course_number) %>
      </div>
      <div class="form-group">
        <%= label_tag(:title, "Title", class: "control-label") %>
        <%= text_field_tag(:title, nil, class: "form-control", value: @course.title) %>
      </div>
      <div class="form-group">
        <%= label_tag(:description, "Description", class: "control-label") %>
        <%= text_field_tag(:description, nil, class: "form-control", value: @course.description) %>
      </div>
      <%= submit_tag "Save", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>